<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="25dp">

    <TextView
        android:id="@+id/instructor_username_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ins1212"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imageView_country_instructor_row"
        app:layout_constraintTop_toTopOf="@+id/imageView_country_instructor_row" />

    <TextView
        android:id="@+id/instructor_pin_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PIN: 1212"
        android:textSize="11sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="@+id/instructor_username_row"
        app:layout_constraintStart_toStartOf="@+id/instructor_username_row"
        app:layout_constraintTop_toBottomOf="@+id/instructor_username_row" />

    <TextView
        android:id="@+id/instructor_name_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wong Hui Ying"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/instructor_email_row"
        app:layout_constraintStart_toStartOf="@+id/instructor_email_row" />

    <ImageView
        android:id="@+id/imageView_country_instructor_row"
        android:layout_width="62dp"
        android:layout_height="36dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/flag_au" />

    <TextView
        android:id="@+id/instructor_email_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20415833@student.curtin.edu.au"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>